<?xml version="1.0" encoding="utf-8"?>
<objects>
    <!-- Frost Condensation Projectiles -->
    <object Name="StarlitKaleidoscope_BaseFrostSlugProjectile" Inherits="TemporaryProjectile">
        <part Name="Render" DisplayName="frost slug" Tile="items/sw_bullet.bmp"/>
        <part Name="Projectile" ColorString="&amp;B" PassByVerb="whiz"/>
        <tag Name="Slug"/>
        <tag Name="BaseObject" Value="*noinherit"/>
        <tag Name="ImpactSound" Value="sfx_missile_leadSlug_hit"/>
        <tag Name="ProjectileVFX" Value="MissileWeaponsEffects/lead_slug"/>
        <tag Name="ProjectileVFXConfiguration" Value="duration::0.25;;slugColor::#40abff;;trailColor::#40abff"/>
    </object>
    <object Name="StarlitKaleidoscope_Frost Slug" Inherits="Projectile">
        <part Name="Render" DisplayName="frost slug" ColorString="&amp;B" DetailColor="B" Tile="items/sw_bullet.bmp"/>
        <part Name="AmmoSlug" ProjectileObject="StarlitKaleidoscope_ProjectileFrostSlug"/>
        <part Name="Physics" Category="Ammo"/>
        <part Name="Description" Short="Frost shaped by mere willpower into a facsimile of a bullet."/>
        <part Name="StarlitKaleidoscope_TransientAmmo"/>
        <part Name="StarlitKaleidoscope_OverrideWeaponProjectile"/>
        <tag Name="AlwaysStack" Value="Yes"/>
        <tag Name="DynamicObjectsTable:Ammo"/>
        <tag Name="TurretStockExclusive"/>
    </object>
    <object Name="StarlitKaleidoscope_ProjectileFrostSlug" Inherits="StarlitKaleidoscope_BaseFrostSlugProjectile">
        <part Name="Projectile" BasePenetration="3" BaseDamage="1d6"/>
    </object>
</objects>